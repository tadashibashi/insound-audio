{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": ["DOM", "ES6"],
  },
  "include": ["src/ts/**/*.d.ts", "src/ts/**/*.ts"]
}
